<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/car_hatchback"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.NoActionBar"
        android:usesCleartextTraffic="true"
        >
        <activity
            android:name=".main"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".activities.AnnouncementActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.AdminAnnouncementActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.AdminChangeableAnnouncement"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.ReviewActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".activities.AdminChangeableReview"
            android:exported="true">
        </activity>
    </application>


</manifest>